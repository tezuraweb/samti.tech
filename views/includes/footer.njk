<footer class="footer">
    {% if hideFooterLinks %}
        <div class="footer__column container__noPadding">
            <div class="footer__wrapper">
                <button class="footer__button button"></button>
            </div>
        </div>
    {% else %}
        <div class="footer__column footer__column--middle container__medium">
            <div class="footer__wrapper">
                <div class="footer__brand">
                    <svg class="footer__logo" aria-label="1st Dev logo">
                        <use xlink:href="#LogoMain"></use>
                    </svg>
                    <div class="footer__company">Samti Technology LLC</div>
                    <p class="footer__desc">{{ translations[language].footerDesc or '' }}</p>
                </div>
                <div class="footer__meta">
                    <div class="footer__links">
                        {% for item in translations[language].infoLinks %}
                            {% if item.link %}
                                <a href="{{ item.link }}" class="footer__links--link footer__links--inline">
                                    {{ item.title }}
                                </a>
                            {% else %}
                                <div {% if item.id %}id="{{ item.id }}"{% endif %} class="footer__links--link footer__links--cta">
                                    {{ item.title }}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="footer__social">
                        {% for item in socials %}
                            <a href="{{ item.link }}" class="footer__social--link">{{ item.title }}</a>
                        {% endfor %}
                    </div>
                </div>
                <div class="footer__bottom">
                    <div class="footer__year">{{ translations[language].footerYear }}</div>
                    <a href="/static/docs/Privacy_Policy.pdf" class="footer__policy" target="_blank" rel="noopener">Privacy Policy</a>
                </div>
            </div>
        </div>
    {% endif %}
</footer>
